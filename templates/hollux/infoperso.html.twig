{% extends "hollux/Base/base.html.twig" %}



{% block principal %}
    <div class="blocHaut">
        <div class="container">
            <h1>En savoir plus sur Hollux</h1>
            <p>Développeur web, alsacien à Lyon... </p>
            <p><b>Page en cour de mise à jour.</b></p>
        </div>
    </div>
